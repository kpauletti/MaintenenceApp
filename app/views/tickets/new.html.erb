<h1> <%= "Car #{params[:car_id]}" %> </h1>


<%= form_for @ticket, url: { action: "create" } do |f| %>
    <div>
        Damage Type: <%= f.select :category, ['Mechanical', 'Electrical', 'Body', 'Other' ]%> 
    </div>
    <div>
        Is the car driveable?: <%= f.select :driveable, [ true, false ]%> 
    </div>
    <div>
        <%= f.file_field :picture %>
    </div>
    <div>
        Notes: <%= f.text_area :note, size: "60x12" %> <br>
    </div>
    <%= f.hidden_field :car_id, value: params[:car_id] %>
    <%= f.hidden_field :completed, value: false %>
    <%= f.submit "Create" %>
<% end %>

